@model IEnumerable<WebThiThuBangLaiOnline.Models.Entity.User>
@{
    ViewBag.Title = "UserManagement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section navheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Content/clients/index3.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lí người dùng</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Quản lí người dùng</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách người dùng</h3>
            <div class="card-tools">
                <a href="/admin/usermanagement/adduser" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Ngày sinh</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr id="trow_@user.ID">
                                <td>@user.ID</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>@user.Birthday.ToString("dd-MM-yyyy")</td>
                                <td>@user.UserName</td>
                                <td>@user.Password</td>
                                <td>
                                    <a href="/admin/usermanagement/edituser/@user.ID" class="btn btn-sm btn-primary">Sửa</a>
                                    <a data-id="@user.ID" class="btn btn-sm btn-danger btnDelete">Xoá</a>
                                </td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn có muốn xoá bản ghi này không?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/usermanagement/deleteuser',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            })
        })
    </script>
}

