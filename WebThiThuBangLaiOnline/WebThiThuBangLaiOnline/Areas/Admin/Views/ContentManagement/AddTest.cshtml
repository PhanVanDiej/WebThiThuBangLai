@model WebThiThuBangLaiOnline.Models.Entity.Test
@{
    ViewBag.Title = "Thêm mới test";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section navheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category/index" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/menu/index" class="nav-link">Quản lí danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm Menu</a>
        </li>
    </ul>
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thêm mới Đề thi</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("AddTest", "ContentManagement", FormMethod.Post, new { }))
    {
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="exampleInputEmail1">Đề thi ID</label>
                @Html.TextBoxFor(x => x.TestID, new { @class = "form-control", @placeholder = "VD: De1" })
                @Html.ValidationMessageFor(x => x.TestID, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Tên Đề thi</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "VD: Đề 1" })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Loại Đề thi</label>
                @Html.TextBoxFor(x => x.Type, new { @class = "form-control", @placeholder = "A1 hoặc A2" })
                @Html.ValidationMessageFor(x => x.Type, null, new { @class = "text-danger" })
            </div>
            <!-- /.card-body -->
        </div>
        <div class="card-footer">
            <a href="/admin/contentmanagement/index" class="btn btn-danger">Quay lại</a>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    }

</div>

